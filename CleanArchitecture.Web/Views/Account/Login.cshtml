@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

@model CleanArchitecture.Web.Models.ViewModels.Account.LoginViewModel

<div class="login-card">
    <form method="post" asp-controller="Account" asp-action="Login" class="login-form">
        <input type="hidden" asp-for="ReturnUrl"/>
        <div asp-validation-summary="ModelOnly">
        </div>
        <input asp-for="UserName" placeholder="Username" class="form-control"/>
        <span asp-validation-for="UserName"></span>
        <input asp-for="Password" placeholder="Password" class="form-control"/>
        <span asp-validation-for="Password"></span>
        <button type="submit" class="btn">Login</button>
    </form>
</div>